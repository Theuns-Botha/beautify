<h2>Listing suppliers</h2>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for supplier <- @suppliers do %>
    <tr>
      <td><%= supplier.name %></td>
      <td><%= supplier.description %></td>

      <td class="text-right">
        <%= link "Show", to: supplier_path(@conn, :show, supplier), class: "btn btn-default btn-xs" %>
        <%= link "Edit", to: supplier_path(@conn, :edit, supplier), class: "btn btn-default btn-xs" %>
        <%= link "Delete", to: supplier_path(@conn, :delete, supplier), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= link "New supplier", to: supplier_path(@conn, :new) %>
